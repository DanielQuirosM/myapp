<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danielq.mycartavirtual.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entradas"
        android:id="@+id/buttonEnt"
        android:layout_above="@+id/buttonPF"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="#ff2c2c"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platos Fuertes"
        android:id="@+id/buttonPF"
        android:layout_above="@+id/buttonpost"
        android:layout_alignEnd="@+id/buttonpost"
        android:backgroundTint="#ff2c2c"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="false"
        android:layout_alignStart="@+id/buttonEnt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postres"
        android:id="@+id/buttonpost"
        android:layout_above="@+id/buttonbeb"
        android:layout_alignEnd="@+id/buttonbeb"
        android:backgroundTint="#ff2c2c"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="false"
        android:layout_alignStart="@+id/buttonEnt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bebidas"
        android:id="@+id/buttonbeb"
        android:layout_alignEnd="@+id/buttonEnt"
        android:backgroundTint="#ff2c2c"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="false"
        android:layout_alignStart="@+id/buttonEnt"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRODUCTOS"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/food_icons_1x"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView2" />

</RelativeLayout>
